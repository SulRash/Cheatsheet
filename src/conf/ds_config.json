{
    "train_micro_batch_size_per_gpu": 96,

    "steps_per_print": 25,

    "bf16": {
      "enabled": true
    },

    "optimizer": {
        "type": "Adam",
        "params": {
          "lr": 1e-4,
          "betas": [
            0.9,
            0.999
          ],
          "eps": 1e-8,
          "weight_decay": 3e-7
        }
    },

    "scheduler": {
      "type": "WarmupLR",
      "params": {
          "warmup_min_lr": 0,
          "warmup_max_lr": 1e-4,
          "warmup_num_steps": 1000
        }
    },


    "wandb": {
      "enabled": true,
      "project": "Cheatsheet"
    }
}