{
    "train_micro_batch_size_per_gpu": 128,

    "steps_per_print": 25,

    "bf16": {
      "enabled": true
    },

    "optimizer": {
        "type": "Adam",
        "params": {
          "lr": 2e-5,
          "betas": [
            0.9,
            0.999
          ],
          "eps": 1e-8,
          "weight_decay": 3e-7
        }
    },

    "scheduler": {
      "type": "OneCycle",
      "params": {
          "cycle_first_step_size": 500000,
          "cycle_first_stair_count": 250000,
          "cycle_second_step_size": 500000,
          "cycle_second_stair_count": 250000,
          "decay_step_size": 50000,
          "cycle_min_lr": 1e-5,
          "cycle_max_lr": 1e-3,
          "decay_lr_rate": 0.001,
          "cycle_min_mom": 0.85,
          "cycle_max_mom": 0.99,
          "decay_mom_rate": 0.0
      }
   },
  


    "wandb": {
      "enabled": true,
      "project": "Cheatsheet"
    }
}